<view class="content"><block tt:if="{{cards}}"><view class="uni-card"><view class="headerimg"><image src="{{cards.avatar}}" mode></image></view><view class="username">{{''+cards.name+''}}</view><view class="user-message"><view class="wx">微 信：<text>{{cards.wechat_name}}</text></view><view class="tel">电 话：<text>{{cards.phone}}</text></view></view><view class="company">{{'所属公司：'+cards.company+''}}</view><view class="qianming"><view class="qianming-title">个性签名：</view><block tt:if="{{editstaue==true}}"><text class="qianming-content">{{cards.describe}}</text></block><block tt:else><view class="editdesribe"><input type="text" maxlength="30" data-event-opts="{{[['blur',[['editstaueTop',['$event']]]]]}}" value="{{cards.describe}}" bindblur="__e"/></view></block><block tt:if="{{editstaue==true}}"><view data-event-opts="{{[['tap',[['editTop',['$event']]]]]}}" class="label" bindtap="__e">编辑</view></block></view><view class="prive"><view class="prive-item border-right"><view class="num">{{''+cards.click+''}}</view><view>预览量</view></view><view class="prive-item border-right"><view class="num">{{''+cards.activity+''}}</view><view>活跃度</view></view><view class="prive-item"><view class="num">{{''+cards.likes+''}}</view><view>点赞数</view></view></view></view></block><view class="card-bottom"><button class="sharebtn" type="default" open-type="share">分享</button><button class="sharebtn" type="default" data-event-opts="{{[['tap',[['shoopTap',['$event']]]]]}}" bindtap="__e">编辑</button></view></view>