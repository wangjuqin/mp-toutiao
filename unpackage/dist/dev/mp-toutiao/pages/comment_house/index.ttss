
.content {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding-bottom: 200rpx;
}
.answer-title{
	font-size: 34rpx;
	color: #000000;
	border-bottom: 1rpx solid #BCC2E6;
	line-height: 100rpx;
	width: 95%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.answer-title .sel-door{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	width: 35%;
	color: #AFAFAF;
	font-size: 30rpx;
}
.answer-title .sel-door>image{
	width: 50rpx;
	height: 50rpx;
}
.textarea{
	color: #AFAFAF;
	margin-top: 30rpx;
	width: 95%;	
	font-size: 30rpx;
}
.textarea>textarea{
	width: 100%;
}
.upload-image{
	width: 95%;	
	display: -webkit-box;	
	display: -webkit-flex;	
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: start;
	-webkit-justify-content: start;
	        justify-content: start;
}
.upload-image .image-item{
	background-color: #F2F2F2;
	border: 1rpx solid #CAD6E2;
	width: 30%;
height: 180rpx;
	
	display: -webkit-box;
	
	display: -webkit-flex;
	
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.upload-image .image-item>image{
	width: 90rpx;
	height: 90rpx;
}
.answers-bottom{
	font-size: 29rpx;
	color: #AFAFAF;
	border-bottom: 1rpx solid #BCC2E6;
	line-height: 100rpx;
	width: 95%;
}
.answers-button{
	font-size: 40rpx;
	color: #FFFFFF;
	background-color: #389BFE;
	line-height: 100rpx;
	width: 90%;
	border-radius: 20rpx;
	text-align: center;
	margin-top: 200rpx;
}


